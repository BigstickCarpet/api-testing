{
  "id": "bigstickcarpet/collections/super-tech-heroes",
  "name": "Super Tech Heroes",
  "scenarioVersion": "1.1",
  "scenarios": {
    "bkatr": {
      "name": "Super Tech Heroes",
      "steps": [
        {
          "id": "hjg6",
          "type": "http",
          "name": "Find characters",
          "input": {
            "method": "get",
            "url": "{$$.env.API_ROOT}/characters"
          },
          "after": {
            "assertions": [
              {
                "target": "output.status",
                "op": "eq",
                "expected": 200
              }
            ]
          }
        },
        {
          "id": "bkpt",
          "type": "http",
          "name": "Creates a new character",
          "input": {
            "method": "post",
            "url": "{$$.env.API_ROOT}/characters",
            "body": "{\n  \"name\": \"Super Coder\",\n  \"powers\": [\n    \"10-xing\",\n    \"Caffeine\"\n  ],\n  \"weakness\": \"Imposter syndrome\",\n  \"nemesis\": {\n    \"name\": \"Space Bugs from Dimension Z\"\n  }\n}",
            "headers": {
              "Content-Type": "application/json"
            }
          },
          "after": {
            "assertions": [
              {
                "target": "output.status",
                "op": "eq",
                "expected": 201
              }
            ]
          }
        },
        {
          "id": "hjb6",
          "type": "http",
          "name": "Deletes all characters",
          "input": {
            "method": "delete",
            "url": "{$$.env.API_ROOT}/characters"
          },
          "after": {
            "assertions": [
              {
                "target": "output.status",
                "op": "eq",
                "expected": 200
              }
            ]
          }
        },
        {
          "id": "hyps",
          "type": "http",
          "name": "Get API info",
          "input": {
            "method": "get",
            "url": "{$$.env.API_ROOT}/"
          },
          "after": {
            "assertions": [
              {
                "target": "output.status",
                "op": "eq",
                "expected": 200
              }
            ]
          }
        }
      ]
    }
  }
}
